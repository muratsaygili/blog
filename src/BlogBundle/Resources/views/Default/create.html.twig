{% extends 'base.html.twig' %}

{% block heading %}
Yeni Yazı Oluştur
{% endblock %}

{% block body %}

    <div class="content-box-large">
        <div class="panel-heading">
            <div class="panel-title">Post Oluştur</div>
        </div>
        <div class="panel-body">
            <form method="post" action="{{ path('post-olustur') }}" class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="baslik" class="col-sm-2 control-label">Başlık: </label>
                    <div class="col-sm-10">
                        <input class="form-control" name="baslik" id="baslik" placeholder="Başlık giriniz" type="text">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">İçerik: </label>
                    <div class="col-sm-10">
                        <textarea class="form-control" name="icerik" placeholder="İçerik giriniz" rows="10"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Kategori: </label>
                    <div class="col-sm-10">
                        <select name="kategori" id="kategori" class="btn dropdown-toggle selectpicker btn-default">
                            {%   for category in categories %}
                            <option value="{{ category.id }}">{{ category.catAd }}</option>
                            {%  endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" name="post_create" class="btn btn-primary" value="Post Oluştur">
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}